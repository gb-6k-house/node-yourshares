    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "compile lib",
            "command": "gulp",
            "args": [
                "compile",
                "--gulpfile",
                "${workspaceRoot}/gulpfile.js"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "taskName": "compile demo",
            "command": "gulp",
            "args": [
                "compile",
                "--gulpfile",
                "${workspaceRoot}/demo/gulpfile.js"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}